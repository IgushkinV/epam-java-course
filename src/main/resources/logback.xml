<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <property name="LOG_FILE" value="src/main/resources/StorageLogFile" />
    <appender name="STORAGE_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- keep 10 days' worth of history capped at 5MB total size -->
            <maxHistory>10</maxHistory>
            <totalSizeCap>5MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <property name="LOG_FILE" value="src/main/resources/CacheLogFile" />
    <appender name="CACHE_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- keep 10 days' worth of history capped at 5MB total size -->
            <maxHistory>10</maxHistory>
            <totalSizeCap>5MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="igushkin.lesson2.Storage" additivity="false" >
        <level value="warn" />
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="STORAGE_LOG_FILE"/>
    </logger>

    <logger name="igushkin.lesson2.Cache"  additivity="false" >
        <level value="info" />
        <appender-ref ref="CACHE_LOG_FILE" />
    </logger>

    <logger name="igushkin.lesson2.Main" additivity="false" >
        <level value="info" />
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>