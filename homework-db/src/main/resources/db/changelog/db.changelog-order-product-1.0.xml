<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2021-05-22-table-order_product-creation" author="Vladimir_Igushkin">
        <createTable tableName="OrderProduct" schemaName="igushkin">
            <column name="OrderId" type="int">
                <constraints primaryKey="true" nullable="false"
                             foreignKeyName="fk_order_product__order"
                             referencedTableName="Order" referencedColumnNames="OrderId"/>
            </column>

            <column name="ProductId" type="int">
                <constraints primaryKey="true" nullable="false"
                             foreignKeyName="fk_order_product__product"
                             referencedTableName="Product" referencedColumnNames="ProductId"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>