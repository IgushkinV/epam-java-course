<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2021-05-22-table-order-creation" author="Vladimir_Igushkin">
        <createTable tableName="Order" schemaName="igushkin">
            <column name="OrderId" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="OrderNumber" type="varchar(10)"/>

            <column name="CustomerId" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_order_customer"
                             referencedTableName="Customer" referencedColumnNames="CustomerId"/>
            </column>

            <column name="OrderDate" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="TotalAmount" type="decimal(12,2)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>